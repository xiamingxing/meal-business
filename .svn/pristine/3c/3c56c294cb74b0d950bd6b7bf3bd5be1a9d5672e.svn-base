<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@color/bg"
                android:orientation="vertical" >
    <Button
            android:id="@+id/registerTop"
            android:layout_width="fill_parent"
            android:layout_height="55dip"
            android:background="@color/headblue"
            android:text="注册"
            android:textColor="#FFFFFFFF"
            android:textSize="20dip"
            android:enabled="false"
            />
    <EditText
            android:hint="  手机号码"
            android:background="#FFFFFFFF"
            android:id="@+id/registerPhone"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_below="@id/registerTop"
            android:layout_marginTop="15dip"
            android:layout_marginLeft="15dip"
            android:layout_marginRight="15dip"
            android:layout_marginBottom="1dp"
            android:textSize="15dip"
            android:drawablePadding="10dp"
            android:inputType="text"
            android:singleLine="true"
                        />
    <EditText
            android:hint="  商户名称"
            android:background="#FFFFFFFF"
            android:id="@+id/registerName"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_below="@id/registerPhone"
            android:layout_marginLeft="15dip"
            android:layout_marginRight="15dip"
            android:layout_marginBottom="1dp"
            android:textSize="15dip"
            android:drawablePadding="10dp"
            android:inputType="text"
            android:singleLine="true"
            />
    <EditText
            android:hint="  商户地址"
            android:background="#FFFFFFFF"
            android:id="@+id/registerAddress"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_below="@id/registerName"
            android:layout_marginLeft="15dip"
            android:layout_marginRight="15dip"
            android:layout_marginBottom="1dp"
            android:textSize="15dip"
            android:drawablePadding="10dp"
            android:inputType="text"
            android:singleLine="true"

            />
    <EditText
            android:hint=" 请输入密码"
            android:background="#FFFFFFFF"
            android:id="@+id/registerPassword"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_below="@id/registerAddress"
            android:layout_marginLeft="15dip"
            android:layout_marginRight="15dip"
            android:layout_marginBottom="1dp"
            android:textSize="15dip"
            android:password="true"
            android:drawablePadding="10dp"
            android:inputType="text"
            android:singleLine="true"
            />
    <EditText
            android:hint=" 请确认密码"
            android:background="#FFFFFFFF"
            android:id="@+id/registerConfirm"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_below="@id/registerPassword"
            android:layout_marginLeft="15dip"
            android:layout_marginRight="15dip"
            android:textSize="15dip"
            android:password="true"
            android:drawablePadding="10dp"
            android:inputType="text"
            android:singleLine="true"
            />
    <Button
            android:id="@+id/registerButton"
            android:layout_width="fill_parent"
            android:layout_height="55dip"
            android:layout_below="@id/registerConfirm"
            android:layout_margin="15dip"
            android:text="注册"
            android:textSize="20dip"
            android:textColor="#FFFFFFFF"
            android:padding="5dip"
            android:background="@color/buttonColor"
            />

</RelativeLayout>