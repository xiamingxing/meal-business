<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg" >
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView 
            android:id="@+id/imageDStore"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:layout_gravity="center_vertical"/>
        <TextView 
            android:id="@+id/storeDName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:textSize="15sp"
            android:textColor="@android:color/black"/>"
            <Button 
	            android:id="@+id/closeButton"
	            android:layout_width="20dp"
	            android:layout_height="20dp"
	            android:layout_margin="10dp"
	            android:layout_weight="2"
	            android:drawableRight="@drawable/close"
	            android:background="@android:color/transparent"/>
    </LinearLayout>
    
	<TextView 
	    android:id="@+id/restDTime"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="10dp"
	    android:layout_marginLeft="10dp"
	    android:layout_marginBottom="5dp"
	    android:textSize="18sp"
	    android:textColor="@android:color/black"/>
	<TextView 
	    android:id="@+id/restDMoney"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_gravity="right"
	    android:layout_marginLeft="10dp"
	    android:textSize="18sp"
	    android:textColor="@android:color/black"/>
	<ListView
	    android:id="@+id/listD" 
	    android:layout_width="fill_parent"
	    android:layout_height="200dp"
	    android:layout_marginTop="20dp"
	    android:layout_marginBottom="20dp"
	    android:padding="5dp">
	    
	</ListView>
	<LinearLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_gravity="bottom">
	    <Button
	        android:id="@+id/commit"
	        android:layout_width="fill_parent"
	        android:layout_height="40dp"
	        android:layout_weight="1"
	        android:layout_margin="10dp"
	        android:text="@string/commit"
	        android:textColor="@android:color/white"
	        android:background="@color/headblue"/>
	    <Button
	        android:id="@+id/findOther"
	        android:layout_width="fill_parent"
	        android:layout_height="40dp"
	        android:layout_weight="1"
	        android:layout_margin="10dp"
	        android:text="@string/findother"
	        android:textColor="@android:color/white"
	        android:background="@color/headblue"/>
	</LinearLayout>
</LinearLayout>
