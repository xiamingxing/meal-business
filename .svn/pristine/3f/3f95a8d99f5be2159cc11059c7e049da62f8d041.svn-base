<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@color/bg"
                android:orientation="vertical" >
    <Button
            android:id="@+id/loginTop"
            android:layout_width="fill_parent"
            android:layout_height="55dip"
            android:background="@color/headblue"
            android:text="登陆"
            android:textColor="#FFFFFF"
            android:textSize="20dip"
            android:enabled="false"
            />
    <EditText
            android:hint="手机号码"
            android:background="#FFFFFF"
            android:id="@+id/loginName"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_below="@id/loginTop"
            android:layout_marginTop="15dip"
            android:layout_marginLeft="15dip"
            android:layout_marginRight="15dip"
            android:layout_marginBottom="1dip"
            android:textSize="15sp"
            android:paddingLeft="20dp"
            android:inputType="text"
            android:singleLine="true"
            />
    <EditText
            android:hint="请输入密码"
            android:background="#FFFFFF"
            android:id="@+id/loginPasswd"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_below="@id/loginName"
            android:layout_marginLeft="15dip"
            android:layout_marginRight="15dip"
            android:textSize="15sp"
            android:password="true"
            android:paddingLeft="20dp"
            android:inputType="text"
            android:singleLine="true"
            />

    <Button
            android:id="@+id/loginButton"
            android:layout_width="fill_parent"
            android:layout_height="55dip"
            android:layout_below="@id/loginPasswd"
            android:layout_margin="15dip"
            android:text="登陆"
            android:textSize="20dip"
            android:textColor="#FFFFFFFF"
            android:padding="5dip"
            android:background="@color/buttonColor"
            />
    <TextView
            android:id="@+id/registerGo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="200dp"
            android:text="没有账号？请点击注册"
            android:textSize="15dip"
            android:textColor="#3993CF"
            android:layout_marginTop="10dp"
            android:layout_below="@id/loginButton"

            />
</RelativeLayout>