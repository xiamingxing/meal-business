<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:background="@color/bg">
    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/headblue"
            android:orientation="horizontal"
            android:layout_weight="1">
        <Button
                android:id="@+id/retButton1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:drawableLeft="@drawable/retbutton"
                android:background="@android:color/transparent"
                />
        <Button
                android:id="@+id/storeBuyBegin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_margin="3dp"
                android:textColor="@android:color/white"
                android:text="@string/storebuybegintext"
                android:textSize="18sp"
                android:background="@android:color/transparent"
                />
        <View
                android:layout_width="1dp"
                android:layout_height="35dp"
                android:layout_toLeftOf="@id/storeBuyBegin"
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true"
                android:background="@android:color/white"
                />
    </RelativeLayout>
    <ListView
            android:id="@+id/goodsList"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:divider="@color/divider"
            android:dividerHeight="1dp"
            android:layout_weight="8">
    </ListView>
	<LinearLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    android:background="@color/bottomGray"
	    android:layout_marginBottom="0dp"
	    android:layout_weight="2">
	    <ImageView 
	        android:layout_width="30dp"
	        android:layout_height="30dp"
	        android:layout_margin="15dp"
	        android:layout_gravity="center_vertical"
	        android:background="@drawable/gouwuche"/>
	    <TextView
	        android:id="@+id/totalNum"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center_vertical"
	        />
	</LinearLayout>

</LinearLayout>